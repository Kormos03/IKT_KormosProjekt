// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Not_Reserved {
  id        Int      @id @default(autoincrement())
  name      String
  dateStart DateTime @default(now())
  dateEnd   DateTime
  type      String
  extra     Boolean  @default(false)
}

model Reserved {
  id        Int      @id @default(autoincrement())
  name      String
  dateStart DateTime @default(now())
  dateEnd   DateTime
  type      String
  extra     Boolean  @default(false)
}

model User {
  id Int @id @default(autoincrement())
  username String
  password String
  email    String @unique
  admin    Boolean @default(false)
  tokens   Token[]
  adminTokens AdminToken[]
}

model Token {
  token String @id
  user User @relation( fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}
model AdminToken {
  token String @id
  user User @relation( fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}

model Images{
  id Int @id @default(autoincrement())
  url String?
  name String @unique
}

