// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Not_Reserved {
  id        Int      @id @default(autoincrement())
  name      String
  dateStart DateTime @default(now())
  dateEnd   DateTime
  type      String
  extra     Boolean  @default(false)
  @@unique([dateStart, dateEnd])
}

model Reserved {
  id        Int      @id @default(autoincrement())
  name      String
  dateStart DateTime @default(now())
  dateEnd   DateTime
  type      String
  extra     Boolean  @default(false)
  @@unique([dateStart, dateEnd])
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  password    String
  email       String       @unique
  admin       Boolean      @default(false)
  tokens      Token[]
  adminTokens AdminToken[]
}

model Token {
  token      String    @id
  expiration DateTime
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
}

// I don't even use this model, but I'm afraid to delete it
model AdminToken {
  token      String    @id
  expiration DateTime
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
}

model Images {
  id    Int     @id @default(autoincrement())
  url   String?
  name  String  @unique
  type  String
}
